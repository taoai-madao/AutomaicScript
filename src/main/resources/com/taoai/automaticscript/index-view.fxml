<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.taoai.automaticscript.HelloController" stylesheets="/fx-css/index-view.css">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="请输入本次点击时长(单位S)"/>
  <TextField fx:id="durationTextField" styleClass="text-input"/>
  <Label text="每次点击间隔(单位MS)"/>
  <TextField fx:id="intervalTextField" styleClass="text-input"/>

  <Label text="开始(或结束前)前请先点 ↓ 击这个按钮已进行F8操作"/>
  <Button text="按下F8以开始" onKeyPressed="#handleKeyPress" styleClass="custom-button"/>

  <Label fx:id="welcomeText"/>

</VBox>
